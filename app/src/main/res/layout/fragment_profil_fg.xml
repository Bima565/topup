<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A020F0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <!-- Header Profile -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="24dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_profile"
                app:tint="#000000"
                android:background="@drawable/ic_launcher_background"
                android:backgroundTint="#000000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bima1234"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <!-- White Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Saldo Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saldo"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- OVO -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ovo_g2"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="OVO"
                                android:textStyle="bold"
                                android:textColor="#5A2D81"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp 100.000"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- DANA -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:layout_marginStart="4dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/dana_g3"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DANA"
                                android:textColor="#008CFF"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp 100.000"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- GoPay -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/gopay_g1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="gopay"
                                android:textStyle="bold"
                                android:textColor="#00AED6"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp 100.000"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Rekomendasi Produk -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rekomendasi Produk"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardRekomendasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#FCE4EC"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/ivRekomendasi"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_welkin"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">
                            <TextView
                                android:id="@+id/tvRekomendasiNama"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Welkin Moon 1x"
                                android:textStyle="bold"
                                android:textColor="#000000"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Genshin Impact"
                                android:textSize="12sp"
                                android:textColor="#808080"/>
                             <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Stok: 99+"
                                android:textSize="12sp"
                                android:textColor="#808080"/>
                            <TextView
                                android:id="@+id/tvRekomendasiHarga"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp 90.000"
                                android:textStyle="bold"
                                android:textColor="#FF0000"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Tentang Kami Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tentang Kami"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"/>

                <!-- Tentang Aplikasi Ini -->
                <LinearLayout
                    android:id="@+id/layoutTentangAplikasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_editext_radius"
                    android:layout_marginBottom="8dp">
                    
                    <LinearLayout
                        android:id="@+id/headerTentangAplikasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tentang Aplikasi Ini"
                            android:textStyle="bold"
                            android:textColor="#000000"/>
                        <TextView
                            android:id="@+id/arrowTentangAplikasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=">"
                            android:textStyle="bold"
                            android:textColor="#000000"/>
                    </LinearLayout>
                    
                    <TextView
                        android:id="@+id/descTentangAplikasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="16dp"
                        android:text="Aplikasi Top Up Game Terpercaya."
                        android:visibility="gone"/>
                </LinearLayout>

                 <!-- Kontak Kami -->
                <LinearLayout
                    android:id="@+id/layoutKontakKami"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_editext_radius"
                    android:layout_marginBottom="8dp">
                    
                    <LinearLayout
                        android:id="@+id/headerKontakKami"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Kontak Kami"
                            android:textStyle="bold"
                            android:textColor="#000000"/>
                        <TextView
                            android:id="@+id/arrowKontakKami"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=">"
                            android:textStyle="bold"
                            android:textColor="#000000"/>
                    </LinearLayout>
                    
                    <TextView
                        android:id="@+id/descKontakKami"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="16dp"
                        android:text="Email: support@topupgame.com\nWA: 08123456789"
                        android:visibility="gone"/>
                </LinearLayout>

                 <!-- Aturan Penggunaan -->
                <LinearLayout
                    android:id="@+id/layoutAturan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_editext_radius"
                    android:layout_marginBottom="8dp">
                    
                    <LinearLayout
                        android:id="@+id/headerAturan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Aturan Penggunaan"
                            android:textStyle="bold"
                            android:textColor="#000000"/>
                        <TextView
                            android:id="@+id/arrowAturan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=">"
                            android:textStyle="bold"
                            android:textColor="#000000"/>
                    </LinearLayout>
                    
                    <TextView
                        android:id="@+id/descAturan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="16dp"
                        android:text="Dilarang melakukan refund tanpa alasan jelas."
                        android:visibility="gone"/>
                </LinearLayout>

                 <!-- Kebijakan Privasi -->
                <LinearLayout
                    android:id="@+id/layoutPrivasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_editext_radius"
                    android:layout_marginBottom="8dp">
                    
                    <LinearLayout
                        android:id="@+id/headerPrivasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Kebijakan Privasi"
                            android:textStyle="bold"
                            android:textColor="#000000"/>
                        <TextView
                            android:id="@+id/arrowPrivasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=">"
                            android:textStyle="bold"
                            android:textColor="#000000"/>
                    </LinearLayout>
                    
                    <TextView
                        android:id="@+id/descPrivasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="16dp"
                        android:text="Data anda aman bersama kami."
                        android:visibility="gone"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
